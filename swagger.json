{
  "swagger": "2.0",
  "info": {
    "title": "Student Records API",
    "description": "API for managing student and teacher records",
    "version": "1.0.0"
  },
  "host": "cse341-student.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "securityDefinitions": {
    "GitHubOAuth": {
      "type": "oauth2",
      "flow": "authorizationCode",
      "authorizationUrl": "https://github.com/login/oauth/authorize",
      "tokenUrl": "https://github.com/login/oauth/access_token",
      "scopes": {
        "read:user": "Access user profile information"
      }
    }
  },
  "security": [{ "GitHubOAuth": [] }],
  "paths": {
    "/students": {
      "get": {
        "description": "Fetch all students",
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "List of students retrieved successfully" },
          "401": { "description": "Unauthorized" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Add a new student",
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "student",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "type": "string" },
                "lastName": { "type": "string" },
                "dateOfBirth": { "type": "string", "format": "date" },
                "email": { "type": "string", "format": "email" },
                "studentClass": { "type": "string" }
              },
              "required": ["firstName", "lastName", "dateOfBirth", "email", "studentClass"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Student created successfully" },
          "400": { "description": "Invalid input data" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/students/{id}": {
      "get": {
        "description": "Get a student by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Student details retrieved" },
          "400": { "description": "Invalid student ID" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Student not found" }
        }
      },
      "put": {
        "description": "Update student details",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "in": "body",
            "name": "student",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "type": "string" },
                "lastName": { "type": "string" },
                "email": { "type": "string", "format": "email" },
                "studentClass": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Student updated successfully" },
          "400": { "description": "Invalid input data" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Student not found" }
        }
      },
      "delete": {
        "description": "Delete a student",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "204": { "description": "Student deleted" },
          "400": { "description": "Invalid student ID" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Student not found" }
        }
      }
    }
  }
}
