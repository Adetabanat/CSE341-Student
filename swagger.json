{
  "swagger": "2.0",
  "info": {
    "title": "Student Records API",
    "description": "API for managing student records",
    "version": "1.0.0"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": ["http", "https"],
  "paths": {
    "/students/": {
      "get": {
        "description": "Fetches a list of all students in the database",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Successfully retrieved list of students"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Adds a new student record to the database",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "student",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "type": "string" },
                "lastName": { "type": "string" },
                "dateOfBirth": { "type": "string", "format": "date" },
                "age": { "type": "integer" },
                "email": { "type": "string", "format": "email" },
                "homeTown": { "type": "string" },
                "studentClass": { "type": "string" },
                "house": { "type": "string" },
                "group": { "type": "string" },
                "parentName": { "type": "string" },
                "contact": { "type": "string" }
              },
              "required": ["firstName", "lastName", "dateOfBirth", "age", "email", "homeTown", "studentClass", "house", "group", "parentName", "contact"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Student created successfully"
          },
          "400": {
            "description": "Bad Request - Invalid input data"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/students/{id}": {
      "get": {
        "description": "Fetches details of a specific student",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved student details"
          },
          "400": {
            "description": "Invalid student ID format"
          },
          "404": {
            "description": "Student not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "description": "Updates one or more fields of an existing student record",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "student",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "type": "string" },
                "lastName": { "type": "string" },
                "dateOfBirth": { "type": "string", "format": "date" },
                "age": { "type": "integer" },
                "email": { "type": "string", "format": "email" },
                "homeTown": { "type": "string" },
                "studentClass": { "type": "string" },
                "house": { "type": "string" },
                "group": { "type": "string" },
                "parentName": { "type": "string" },
                "contact": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Student updated successfully"
          },
          "400": {
            "description": "Invalid student ID format or missing update fields"
          },
          "404": {
            "description": "Student not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Removes a student record from the database",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Student deleted successfully"
          },
          "400": {
            "description": "Invalid student ID format"
          },
          "404": {
            "description": "Student not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
